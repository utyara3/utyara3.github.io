---
layout: base.njk
---
<article class="guide-content">
    <div class="guide-header">
        <h1>{{ title }}</h1>
        {% if author %}
        <div class="author-inline">
            <span class="author-by">by</span>
            <span class="author-name">{{ author }}</span>
        </div>
        {% endif %}
    </div>

    {% if description %}
    <p class="guide-description">{{ description }}</p>
    {% endif %}
    
    <div class="content">
        {{ content | safe }}
    </div>
    
    <nav class="guide-navigation">
        {% if '/guide/' in page.url %}
        <a href="/guide/" class="back-link">← Назад к списку гайдов</a>
        {% endif %}
        {% if '/stonescript/' in page.url %}
        <a href="/stonescript/" class="back-link">← Назад к StoneScript</a>
        {% endif %}
        {% if '/speedrun/' in page.url %}
        <a href="/speedrun/" class="back-link">← Назад к Спидранам</a>
        {% endif %}
    </nav>
</article>